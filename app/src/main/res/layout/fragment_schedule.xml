<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tabs.ScheduleFragment"
    android:background="@color/PolyWhiteLight">

    <LinearLayout
        android:id="@+id/schedule_week_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <TableLayout
            android:stretchColumns="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:textAlignment="center"
                    android:text="Пн"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Вт"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Ср"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Чт"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Пт"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Сб"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:text="Вс"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:textAlignment="gravity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="21"
                        android:textColor="@color/PolyWhiteLight"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="@color/PolyGreenLight"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="22"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="23"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="24"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="25"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="26"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="27"
                        android:textColor="@color/PolyBlack"
                        android:background="@drawable/btn_circle"
                        android:backgroundTint="#fff"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:backgroundTint="@color/PolyWhiteDark"/>

    </LinearLayout>

    <View
        android:layout_below="@id/schedule_week_content"
        android:id="@+id/schedule_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/PolyWhiteDark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedule_recycler_view"
        android:layout_below="@id/schedule_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>