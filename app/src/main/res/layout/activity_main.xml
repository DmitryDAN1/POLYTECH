<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@android:color/white">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/notes_top_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/notes_menu_top_navigation" />


    <View
        android:id="@+id/top_navigation_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/frame_layout"
        android:background="@color/PolyWhiteDark" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_view_line"
        android:layout_below="@id/notes_top_navigation_view"/>

    <View
        android:id="@+id/bottom_navigation_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom_navigation_view"
        android:background="@color/PolyWhiteDark" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation" />

</RelativeLayout>