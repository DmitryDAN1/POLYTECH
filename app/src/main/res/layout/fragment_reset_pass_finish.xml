<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.tabs.ResetPassFinishFragment">


    <ProgressBar
        android:id="@+id/resetPass_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/reset_finish_backBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_arrow_back_green"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/resetPass_mainRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="invisible">


        <TextView
            android:id="@+id/reset_finish_mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="@string/reset_finish_mainText"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reset_finish_subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reset_finish_mainText"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="@string/reset_finish_subText"
            android:textSize="19sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/reset_finish_nextBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/reg_btn"
        android:text="@string/reset_finish_nextBTN"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>