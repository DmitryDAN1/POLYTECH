<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.welcome.WelcomeFacultiesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TextView
            android:id="@+id/welcome_group_mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/PolyBlack"
            android:text="Выберите институт"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_group_subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/welcome_group_mainText"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Введите название института, чтобы мы смогли отобразить необходимые группы"
            android:textSize="18sp"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/welcome_faculties_groupTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@id/welcome_group_subText"
            app:hintEnabled="false"
            app:errorEnabled="true" >

            <AutoCompleteTextView
                android:gravity="center"
                android:id="@+id/welcome_faculties_groupET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:completionThreshold="0" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/welcome_faculties_nextBTN"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_btn"
        android:text="@string/next_step"
        android:textSize="16sp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/white" />


</RelativeLayout>