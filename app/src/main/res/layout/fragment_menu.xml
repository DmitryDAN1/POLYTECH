<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tabs.MenuFragment"
    android:background="@color/PolyWhiteLight">

    <RelativeLayout
        android:id="@+id/MainRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <RelativeLayout
            android:id="@+id/profileBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white">

            <RelativeLayout
                android:id="@+id/profileBlockContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp" >

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileAvatarCV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp" >

                    <ImageView
                        android:id="@+id/profileAvatarIV"
                        android:src="@android:color/black"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_toEndOf="@id/profileAvatarCV"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Даниленко Дмитрий"
                        android:textColor="@color/PolyBlack"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/menu_profileBlock_currentGroupTV"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="3530904/90006"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="top"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/profileBottomLine"
            android:layout_below="@id/profileBlock"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/PolyWhiteDark" />

        <RelativeLayout
            android:id="@+id/settingsBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profileBottomLine"
            android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/notification_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="30dp" >

                    <ImageView
                        android:id="@+id/notifications_content_icon"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notifications_gray" />


                    <TextView
                        android:id="@+id/notifications_content_text"
                        android:layout_toEndOf="@id/notifications_content_icon"
                        android:layout_toStartOf="@id/notifications_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="@string/notifications"
                        android:textColor="@color/PolyBlack"
                        android:textSize="20sp"
                        android:textStyle="normal"/>

                    <Switch
                        android:layout_alignParentEnd="true"
                        android:id="@+id/notifications_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/groupNumber_content"
                    android:layout_below="@id/notification_content"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/groupNumber_content_icon"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_group_gray" />

                    <TextView
                        android:id="@+id/groupNumber_content_text"
                        android:layout_toEndOf="@id/groupNumber_content_icon"
                        android:layout_toStartOf="@id/menu_settingsBlock_currentGroupTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="@string/group_number"
                        android:textColor="@color/PolyBlack"
                        android:textSize="20sp"
                        android:textStyle="normal"/>

                    <TextView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/menu_settingsBlock_currentGroupTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3530904/90006"
                        android:gravity="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="15dp"/>

                </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/settingsBottomLine"
            android:layout_below="@id/settingsBlock"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/PolyWhiteDark" />

        <Button
            android:id="@+id/exitBlock_exitBTN"
            android:layout_below="@id/settingsBottomLine"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="17sp"
            android:background="@android:color/white"/>

        <View
            android:id="@+id/exitBottomLine"
            android:layout_below="@id/exitBlock_exitBTN"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/PolyWhiteDark" />


    </RelativeLayout>


</ScrollView>
