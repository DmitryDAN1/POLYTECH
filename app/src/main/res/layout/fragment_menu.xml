<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tabs.MenuFragment"
    android:background="@color/PolyWhiteLight">

    <RelativeLayout
        android:id="@+id/menu_headerBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="15dp">


        <RelativeLayout
            android:id="@+id/menu_headerUserInfoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/menu_headerUserNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/PolyBlack"
                android:fontFamily="@font/sfbold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/menu_headerGroup"
                android:gravity="center"
                android:layout_below="@id/menu_headerUserNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер группы"
                android:fontFamily="@font/sfregular"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/menu_headerLine"
        android:layout_below="@id/menu_headerBlock"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/PolyWhiteDark" />

    <RelativeLayout
        android:id="@+id/menu_bodyBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/menu_headerLine" >

        <RelativeLayout
            android:id="@+id/menu_body_notificationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menu_body_notificationIcon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_notifications_gray"
                android:layout_marginStart="15dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/menu_body_notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_body_notificationIcon"
                android:layout_toStartOf="@id/menu_body_notificationSwitch"
                android:layout_centerInParent="true"
                android:text="Уведомления"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Switch
                android:id="@+id/menu_body_notificationSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_body_groupContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_body_notificationContent">

            <ImageView
                android:id="@+id/menu_body_groupIcon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_group_gray"
                android:layout_marginStart="15dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/menu_body_groupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_body_groupIcon"
                android:layout_toStartOf="@id/menu_body_groupCurrent"
                android:layout_centerInParent="true"
                android:text="Номер группы"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/menu_body_groupCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="3530904/90006"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/menu_bodyLine"
        android:layout_below="@id/menu_bodyBlock"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/PolyWhiteDark" />

    <RelativeLayout
        android:id="@+id/menu_authBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/menu_bodyLine"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/menu_auth_syncContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menu_auth_syncIcon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_hotel_black_100dp"
                android:layout_marginStart="15dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/menu_auth_syncText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_auth_syncIcon"
                android:layout_centerInParent="true"
                android:text="Синхронизация заметок"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

            <Switch
                android:id="@+id/menu_auth_syncSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_auth_nameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_auth_syncContent">

            <ImageView
                android:id="@+id/menu_auth_nameIcon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginStart="15dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/menu_auth_nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_auth_nameIcon"
                android:layout_centerInParent="true"
                android:text="Сменить имя профиля"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_auth_passContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_auth_nameContent">

            <ImageView
                android:id="@+id/menu_auth_passIcon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_textsms_gray_35dp"
                android:layout_marginStart="15dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/menu_auth_passText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_auth_passIcon"
                android:layout_centerInParent="true"
                android:text="Изменить пароль"
                android:fontFamily="@font/sfregular"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp" />

        </RelativeLayout>



    </RelativeLayout>

    <View
        android:id="@+id/menu_authLine"
        android:layout_below="@id/menu_authBlock"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/PolyWhiteDark"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/menu_aboutBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="О приложении"
        android:fontFamily="@font/sfsemibold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="15dp" />


</RelativeLayout>
